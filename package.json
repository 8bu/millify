{
  "name": "millify",
  "version": "3.1.0",
  "description": "Converts long numbers to pretty, human-readable strings",
  "main": "lib/millify.js",
  "bin": {
    "millify": "bin/millify.js"
  },
  "scripts": {
    "build": "tsc",
    "test": "tsc && ava --verbose",
    "lint": "tslint --fix -p tsconfig.json",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint"
  },
  "lint-staged": {
    "*.ts": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/izolate/millify.git"
  },
  "keywords": [
    "big",
    "large",
    "numbers",
    "short",
    "pretty",
    "human",
    "format",
    "readable",
    "simplify",
    "beautify",
    "thousand",
    "million",
    "billion",
    "trillion",
    "millify"
  ],
  "author": "izolate <yoshtalwar@gmail.com> (http://izolate.net/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/izolate/millify/issues"
  },
  "homepage": "https://github.com/izolate/millify#readme",
  "devDependencies": {
    "ava": "^2.3.0",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.18.2",
    "tslint": "^5.19.0",
    "typescript": "^3.6.2"
  },
  "dependencies": {
    "yargs": "^13.2.2"
  }
}
