{
  "name": "millify",
  "version": "3.0.0",
  "description": "Converts long numbers to pretty, human-readable strings",
  "main": "src/index.js",
  "bin": {
    "millify": "src/cli.js"
  },
  "scripts": {
    "test": "ava --verbose",
    "lint": "eslint --fix test.js src"
  },
  "lint-staged": {
    "*.js": [
      "npm run lint",
      "git add"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "npm run lint"
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/izolate/millify.git"
  },
  "keywords": [
    "long",
    "numbers",
    "format",
    "human",
    "pretty",
    "million",
    "billion",
    "trillion",
    "millify"
  ],
  "author": "izolate <yoshtalwar@gmail.com> (http://izolate.net/)",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/izolate/millify/issues"
  },
  "homepage": "https://github.com/izolate/millify#readme",
  "devDependencies": {
    "ava": "^1.4.1",
    "eslint": "^5.16.0",
    "eslint-config-airbnb-base": "^13.1.0",
    "eslint-config-prettier": "^4.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-prettier": "^3.0.1",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.5",
    "prettier": "^1.17.0"
  },
  "dependencies": {
    "yargs": "^13.2.2"
  }
}
